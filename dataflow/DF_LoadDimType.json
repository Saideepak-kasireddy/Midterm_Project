{
	"name": "DF_LoadDimType",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Snowflake_TitleBasics",
						"type": "DatasetReference"
					},
					"name": "sourceDimType"
				},
				{
					"dataset": {
						"referenceName": "Snowflake_DimType",
						"type": "DatasetReference"
					},
					"name": "DimTypeMaxID"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Snowflake_DimType",
						"type": "DatasetReference"
					},
					"name": "sinkDimType"
				}
			],
			"transformations": [
				{
					"name": "DimTypewithSK"
				},
				{
					"name": "DerivedColumns"
				},
				{
					"name": "surrogateKey"
				}
			],
			"scriptLines": [
				"parameters{",
				"     Job_ID as string (\"10\")",
				"}",
				"source(output(",
				"          TCONST as string,",
				"          TITLETYPE as string,",
				"          PRIMARYTITLE as string,",
				"          ORIGINALTITLE as string,",
				"          ISADULT as boolean,",
				"          STARTYEAR as string,",
				"          ENDYEAR as string,",
				"          RUNTIMEMINUTES as string,",
				"          GENRES as string,",
				"          JOB_ID as string,",
				"          CREATED_DATE as date",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table') ~> sourceDimType",
				"source(output(",
				"          TYPE_SK as decimal(20,0)",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     query: '   SELECT NVL(MAX(TYPE_SK),0) AS TYPE_SK FROM DAMG_SCHEMA.DIM_TYPE',",
				"     format: 'query') ~> DimTypeMaxID",
				"sourceDimType, DimTypeMaxID join(1==1,",
				"     joinType:'cross',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> DimTypewithSK",
				"surrogateKey derive(JOB_ID = $Job_ID,",
				"          CREATED_DATE = currentTimestamp(),",
				"          TYPE_SK = TYPE_SK+RowNum) ~> DerivedColumns",
				"DimTypewithSK keyGenerate(output(RowNum as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey",
				"DerivedColumns sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     stageInsert: true,",
				"     mapColumn(",
				"          TITLE_TYPE = TITLETYPE,",
				"          JOB_ID,",
				"          CREATED_DATE,",
				"          TYPE_SK",
				"     )) ~> sinkDimType"
			]
		}
	}
}