{
	"name": "DF_LoadDimRegion",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Snowflake_TitleAkas",
						"type": "DatasetReference"
					},
					"name": "SourceCleanTitleAkas"
				},
				{
					"dataset": {
						"referenceName": "Snowflake_DimRegion",
						"type": "DatasetReference"
					},
					"name": "MaxDimRegionID"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Snowflake_DimRegion",
						"type": "DatasetReference"
					},
					"name": "sinkDimRegion"
				}
			],
			"transformations": [
				{
					"name": "join1"
				},
				{
					"name": "surrogateKey1"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     Job_ID as string (\"10\")",
				"}",
				"source(output(",
				"          TITLEID as string,",
				"          ORDERING as decimal(38,0),",
				"          TITLE as string,",
				"          REGION as string,",
				"          LANGUAGE as string,",
				"          TYPES as string,",
				"          ATTRIBUTES as string,",
				"          ISORIGINALTITLE as boolean,",
				"          JOB_ID as string,",
				"          CREATED_DATE as date",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table') ~> SourceCleanTitleAkas",
				"source(output(",
				"          REGION_SK as decimal(20,0)",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     query: '    SELECT NVL(MAX(REGION_SK),0) AS REGION_SK FROM DAMG_SCHEMA.DIM_REGION',",
				"     format: 'query') ~> MaxDimRegionID",
				"SourceCleanTitleAkas, MaxDimRegionID join(1==1,",
				"     joinType:'cross',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 keyGenerate(output(RowNum as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey1",
				"surrogateKey1 derive(JOB_ID = $Job_ID,",
				"          CREATED_DATE = currentTimestamp()  ,",
				"          REGION_SK = REGION_SK+RowNum) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     stageInsert: true,",
				"     mapColumn(",
				"          REGION,",
				"          JOB_ID,",
				"          CREATED_DATE,",
				"          REGION_SK",
				"     )) ~> sinkDimRegion"
			]
		}
	}
}